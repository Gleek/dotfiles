[module/player-mpris-tail]
type = custom/script
exec = ~/.config/polybar/scripts/mpris.py -f '{icon} {:t7:{title}:}'
tail = true
click-left = ~/.config/polybar/scripts/mpris.py previous &
click-right = ~/.config/polybar/scripts/mpris.py next &
click-middle = ~/.config/polybar/scripts/mpris.py play-pause &

[module/playerctl]
type = custom/script
